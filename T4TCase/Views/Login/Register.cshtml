@using T4TCase.ViewModel
@model RegisterViewModel


<h1>Registration</h1>
<form method="post" asp-controller="Login" asp-action="Register">
    <div class="t4tFormContentLeft">
        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="UserName"></label>
            <div class="col-10">
                <input class="form-control" asp-for="UserName" />
            </div>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Email"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Email" />
            </div>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Password"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Password" />
            </div>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="ConfirmPassword"></label>
            <div class="col-10">
                <input class="form-control" asp-for="ConfirmPassword" />
            </div>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="LastName"></label>
            <div class="col-10">
                <input class="form-control" asp-for="LastName" />
            </div>
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="FirstName"></label>
            <div class="col-10">
                <input class="form-control" asp-for="FirstName" />
            </div>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Age"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Age" />
            </div>
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="PhoneNumer"></label>
            <div class="col-10">
                <input class="form-control" asp-for="PhoneNumer" />
            </div>
            <span asp-validation-for="PhoneNumer"></span>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Address"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Address" />
            </div>
            <span asp-validation-for="Address"></span>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="City"></label>
            <div class="col-10">
                <input class="form-control" asp-for="City" />
            </div>
            <span asp-validation-for="City"></span>
        </div>
    </div>
            <div><input type="submit" class="btn btn-primary" value="Register" /></div>
</form>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
